<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_connexion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:onClick="btnConnexion"
            android:layout_marginTop="348dp" android:layout_marginStart="76dp"/>
    <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_inscription"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="348dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"/>
    <TextView
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textSize="60sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="158dp"/>


</android.support.constraint.ConstraintLayout>