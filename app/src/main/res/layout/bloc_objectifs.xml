<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="4">

            <ImageView
                    android:id="@+id/oeuf"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/oeuf" />

            <ImageView
                    android:id="@+id/pomme"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pomme" />

            <ImageView
                    android:id="@+id/huile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/huile" />

            <ImageView
                    android:id="@+id/barreoeuf"
                    android:layout_width="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barreoeufpleine"
                    android:layout_width="70dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/barrepleinerouge" />

            <ImageView
                    android:id="@+id/barreoeuf2"
                    android:layout_width="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barrepommepleine"
                    android:layout_width="70dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/barrepleineverte" />

            <ImageView
                    android:id="@+id/barrepomme"
                    android:layout_width="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barrehuilepleine"
                    android:layout_width="70dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/barrepleinejaune" />


            <ImageView
                    android:id="@+id/ble"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ble"
                    android:src="@drawable/ble" />

            <ImageView
                    android:id="@+id/yaourt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/yaourt" />

            <ImageView
                    android:id="@+id/chocolat"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/chocolat" />

            <ImageView
                    android:id="@+id/barreble"
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barreblepleine"
                    android:layout_width="70dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/barrepleineorange" />

            <ImageView
                    android:id="@+id/barreyaourt"
                    android:layout_width="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barreyaourtpleine"
                    android:layout_width="70dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/barrepleinebleu" />

            <ImageView
                    android:id="@+id/barrechocolat"
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/barrevide" />

            <ImageView
                    android:id="@+id/barrechocolatpleine"
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    app:srcCompat="@drawable/barrepleineviolette" />


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>