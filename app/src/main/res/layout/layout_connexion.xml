<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondpageconnexion"
        android:orientation="vertical">

    <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bonjour"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="60sp" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Tu peux te connecter"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="23sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:id="@+id/mail"
                android:layout_width="419dp"
                android:layout_height="109dp"
                android:background="@drawable/barreombre"
                android:ems="10"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="120dp"
                android:paddingRight="50dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.088" />

        <EditText
                android:id="@+id/password"
                android:layout_width="419dp"
                android:layout_height="109dp"
                android:background="@drawable/barreombre"
                android:ems="10"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:paddingLeft="120dp"
                android:paddingRight="50dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.336" />

        <ImageView
                android:id="@+id/imageView9"
                android:layout_width="39dp"
                android:layout_height="31dp"
                android:layout_alignBottom="@+id/mail"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="@+id/mail"
                app:layout_constraintTop_toTopOf="@+id/mail"
                app:layout_constraintVertical_bias="0.089"
                app:srcCompat="@drawable/iconeemail" />

        <ImageView
                android:id="@+id/imageView13"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:layout_alignBottom="@+id/mail"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="@+id/mail"
                app:layout_constraintTop_toTopOf="@+id/mail"
                app:layout_constraintVertical_bias="0.30"
                app:srcCompat="@drawable/iconemdp" />

        <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.887"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.518"
                app:srcCompat="@drawable/iconeon" />

        <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:fontFamily="@font/montserrat"
                android:text="Me connecter"
                android:textColor="@android:color/black"
                android:textSize="29sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.661" />

        <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Rester connecté"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.519" />

        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Créer un compte "
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.432"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.904" />

        <ImageView
                android:id="@+id/imageView14"
                android:layout_width="37dp"
                android:layout_height="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.007"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.907"
                app:srcCompat="@drawable/iconefleche" />

        <ImageButton
                android:id="@+id/btn_connexion"
                android:layout_width="77dp"
                android:layout_height="44dp"
                android:background="@drawable/iconecontinuer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.67" />

        <Button
                android:id="@+id/mdpoublie"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:layout_width="218dp"
                android:layout_height="36dp"
                android:fontFamily="@font/montserrat"
                android:text="Mot de passe oublié ? "
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.858" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>