<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >
    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_ca_background"

            />
    <Button
            android:id="@+id/changerMdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer de mot de passe"
            android:textAllCaps="false"
            />

    <EditText
            android:id="@+id/newMdp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Taille"
            android:inputType="textPassword"
            android:visibility="invisible"/>
    <EditText
            android:id="@+id/newMdpVerif"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Taille"
            android:inputType="textPassword"
            android:visibility="invisible"
            />
    <Button
            android:id="@+id/changerMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer d'adresse mail"
            android:textAllCaps="false" />
    <EditText
            android:id="@+id/newMail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Taille"
            android:inputType="textPassword"
            android:visibility="invisible"
            />
    <EditText
            android:id="@+id/newMailVerif"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Taille"
            android:inputType="textPassword"
            android:visibility="invisible"
            />
</LinearLayout>