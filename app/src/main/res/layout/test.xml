<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".StatActivity">

    <include
            android:id="@+id/include_bloc_menu"
            layout="@layout/bloc_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="677dp"
            android:layout_above="@+id/include_bloc_menu"
            android:layout_marginBottom="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <TextView
                        android:id="@+id/monobjectif6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/MaJournee"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Mes statistiques"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.114"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.517" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="423dp"
                    android:layout_height="321dp">

                <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="386dp"
                        android:layout_height="279dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/carreblancaccueil" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.139"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.298" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.824"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.298" />

                <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_alignEnd="@+id/chart3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart3"
                        app:layout_constraintEnd_toEndOf="@+id/chart3"
                        app:layout_constraintHorizontal_bias="0.485"
                        app:layout_constraintStart_toStartOf="@+id/chart3"
                        app:layout_constraintTop_toTopOf="@+id/chart3"
                        app:layout_constraintVertical_bias="0.514" />

                <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_alignEnd="@+id/chart3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart"
                        app:layout_constraintEnd_toEndOf="@+id/chart"
                        app:layout_constraintStart_toStartOf="@+id/chart"
                        app:layout_constraintTop_toTopOf="@+id/chart" />

                <TextView
                        android:id="@+id/textView25"
                        android:layout_width="132dp"
                        android:layout_height="55dp"
                        android:text="D'objectifs atteints cette semaine"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.161"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.815" />

                <TextView
                        android:id="@+id/textView26"
                        android:layout_width="132dp"
                        android:layout_height="55dp"
                        android:text="Le résumé de votre semaine"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.815" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imageView26"
                        android:layout_width="386dp"
                        android:layout_height="279dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/carreblancaccueil" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageView26"
                        app:layout_constraintStart_toStartOf="@+id/imageView26"
                        app:layout_constraintTop_toTopOf="@+id/imageView26" />

                <ImageView
                        android:id="@+id/imageView25"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_alignEnd="@+id/chart3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart7"
                        app:layout_constraintEnd_toEndOf="@+id/chart7"
                        app:layout_constraintStart_toStartOf="@+id/chart7"
                        app:layout_constraintTop_toTopOf="@+id/chart7" />

                <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courbe de progression"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView26"
                        app:layout_constraintVertical_bias="0.955" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="386dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.36"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/carreblanclargepng"
                        tools:layout_editor_absoluteY="1dp" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart9"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageView28"
                        app:layout_constraintHorizontal_bias="0.067"
                        app:layout_constraintStart_toStartOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.504" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart10"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageView28"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.504" />

                <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart11"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageView28"
                        app:layout_constraintHorizontal_bias="0.929"
                        app:layout_constraintStart_toStartOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.495" />

                <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignEnd="@+id/chart3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart9"
                        app:layout_constraintEnd_toEndOf="@+id/chart9"
                        app:layout_constraintStart_toStartOf="@+id/chart9"
                        app:layout_constraintTop_toTopOf="@+id/chart9" />

                <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignEnd="@+id/chart9"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart10"
                        app:layout_constraintEnd_toEndOf="@+id/chart10"
                        app:layout_constraintStart_toStartOf="@+id/chart10"
                        app:layout_constraintTop_toTopOf="@+id/chart10" />

                <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignEnd="@+id/chart9"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/cercleblanc"
                        app:layout_constraintBottom_toBottomOf="@+id/chart11"
                        app:layout_constraintEnd_toEndOf="@+id/chart11"
                        app:layout_constraintStart_toStartOf="@+id/chart11"
                        app:layout_constraintTop_toTopOf="@+id/chart11" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>