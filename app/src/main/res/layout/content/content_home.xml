<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_home"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="361dp"
            android:layout_height="361dp"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_3" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"/>

    <TextView
            android:text="Bonjour,"
            android:id="@+id/tv_hello"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="480dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
    />

    <TextView
            android:text="NOM"
            android:id="@+id/tv_nom"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_hello"
            app:layout_constraintTop_toTopOf="@id/tv_hello"
            android:layout_marginStart="3dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>