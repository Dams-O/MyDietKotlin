<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="vertical" tools:layout_editor_absoluteY="-404dp"
            tools:layout_editor_absoluteX="-180dp">
        <ImageView
                android:layout_width="361dp"
                android:layout_height="361dp"
                android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/logo_3"/>
        <Button
                android:text="@string/title_activity_connexion"
                android:layout_width="104dp"
                android:layout_height="60dp"
                android:id="@+id/tv_hello"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="380dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorText"
                android:background="@color/colorButton"/>
        <Button
                android:text="@string/button_inscription"
                android:layout_width="104dp"
                android:layout_height="60dp"
                android:id="@+id/button3"
                app:layout_constraintStart_toStartOf="@+id/tv_hello"
                android:layout_marginTop="380dp"
                android:layout_marginStart="200dp"
                android:textColor="@color/colorText" android:background="@color/colorButton"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>